
@model kunskapscheck.Person

@{
    var createOptions = new AjaxOptions
        {

        HttpMethod = "POST",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "posts",
        OnSuccess = "OnEditSuccess"
        };
}
<div>
    <h2>Ändra</h2>

    @using (Ajax.BeginForm("Edit", "Person", null, createOptions, new { ID = "editform" }))
        {
        <div class="row">

            <div class="col-md-2">

                @Html.LabelFor(m => m.Namn)
                @Html.EditorFor(m => m.Namn)
                @Html.ValidationMessageFor(m => m.Namn)
            </div>

            <div class="col-md-2">

                @Html.LabelFor(m => m.Adress)
                @Html.EditorFor(m => m.Adress)
                @Html.ValidationMessageFor(m => m.Adress)
            </div>
            <div class="col-md-2">

                @Html.LabelFor(m => m.Telefon)
                @Html.EditorFor(m => m.Telefon)
                @Html.ValidationMessageFor(m => m)
            </div>

                </div>
            <button type="submit" id="submit" name="submit">Ändra</button>


        }
</div>

